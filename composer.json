{
	"name": "yard/wp-database",
	"type": "package",
	"description": "WordPress Eloquent ORM",
	"license": "MIT",
	"support": {
		"source": "https://github.com/yardinternet/wp-database",
		"issues": "https://github.com/yardinternet/wp-database/issues"
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "git@github.com:yardinternet/yard-data.git"
		}
	],
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"pestphp/pest-plugin": true
		},
		"platform": {
			"php": "8.2"
		}
	},
	"require": {
		"php": ">=8.2",
		"jgrossi/corcel": "^9.0",
		"roots/acorn": "^5.0",
		"spatie/laravel-data": "^4.0",
		"spatie/laravel-package-tools": "^1.16",
		"yard/data": "dev-feat/acorn-5"
	},
	"require-dev": {
		"10up/wp_mock": "^0.4.2",
		"larastan/larastan": "^3.0",
		"orchestra/testbench": "^10.0",
		"pestphp/pest": "^3.0",
		"szepeviktor/phpstan-wordpress": "^2.0",
		"yard/php-cs-fixer-rules": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"Yard\\Database\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Yard\\Database\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"post-autoload-dump": [
			"sed -i -e 's#function __(#function ____(#' ./vendor/php-stubs/wordpress-stubs/wordpress-stubs.php"
		],
		"all": [
			"@test",
			"@analyse",
			"@format"
		],
		"analyse": "vendor/bin/phpstan analyse --debug --memory-limit 1G",
		"format": "vendor/bin/php-cs-fixer fix",
		"test": "vendor/bin/pest",
		"test:coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage"
	},
	"extra": {
		"acorn": {
			"providers": [
				"Yard\\Database\\DatabaseServiceProvider"
			]
		}
	}
}
